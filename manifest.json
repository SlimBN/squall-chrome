{
    "manifest_version": 2,
    "name": "Textshots",
    "version": "0.1",

    "description": "Hacking The Tweetstorm with Pictures of Text",

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"},
        "default_popup": "popup.html",
        "default_title": "Textshots"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "contextMenus",
        "storage"
    ],

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "options_page": "options.html"
}
